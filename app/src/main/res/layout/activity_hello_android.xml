<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/match_parent"
    android:layout_height="@dimen/wrap_content"
    android:background="#FFFFFF"
    tools:context="com.example.android.helloandroid.HelloAndroid">


    <LinearLayout
        android:layout_width="@dimen/match_parent"
        android:layout_height="@dimen/wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@drawable/udacityflyingcar"
            android:layout_width="@dimen/wrap_content"
            android:layout_height="@dimen/heightimage1"
            android:contentDescription="@string/udacitylogo"
            android:scaleType="centerCrop"
            android:src="@drawable/udacityflyingcar" />

        <TextView
            android:id="@+id/udacity"
            style="@style/Styletitle"
            android:layout_width="@dimen/match_parent"
            android:layout_height="@dimen/match_parent"
            android:padding="@dimen/textview_padding"
            android:text="@string/udacity"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/font_size" />


        <TextView
            android:id="@+id/address"
            style="@style/Styletitle"
            android:layout_width="@dimen/match_parent"
            android:layout_height="@dimen/match_parent"
            android:drawableLeft="@drawable/iclocation"
            android:drawablePadding="8dp"
            android:drawableTint="@android:color/holo_blue_light"
            android:padding="@dimen/textview_padding"
            android:text="@string/address"
            android:textSize="@dimen/font_size" />


        <TextView
            android:id="@+id/number"
            style="@style/Styletitle"
            android:layout_width="@dimen/match_parent"
            android:layout_height="@dimen/match_parent"
            android:autoLink="all"
            android:drawableLeft="@drawable/icphone"
            android:drawableTint="@android:color/holo_blue_light"
            android:padding="@dimen/textview_padding"
            android:text="@string/number"
            android:textSize="@dimen/font_size" />


        <TextView
            android:id="@+id/website"
            style="@style/Styletitle"
            android:layout_width="@dimen/match_parent"
            android:layout_height="@dimen/match_parent"
            android:autoLink="all"
            android:padding="@dimen/textview_padding"
            android:text="@string/website"
            android:textColorLink="@android:color/holo_blue_light"
            android:textSize="@dimen/font_size"
            android:drawableLeft="@drawable/icweb"
            android:drawableTint="@android:color/holo_blue_light"
            />

        <ImageView
            android:id="@drawable/udacityflyingcar"
            android:layout_width="@dimen/match_parent"
            android:layout_height="@dimen/heightimage2"
            android:contentDescription="@string/udacitylogo"
            android:src="@drawable/udacitylogo" />


    </LinearLayout>

</ScrollView>