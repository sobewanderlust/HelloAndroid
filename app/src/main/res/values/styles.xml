<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Styletitle" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:layout_width">200dp</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:paddingLeft">8dp</item>
    <item name="android:paddingRight">8dp</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textColor">#9E9E9E</item>
    <item name="android:background">#FFFFFF</item>
    <item name="android:fontFamily">@font/indie_flower</item>

    </style>

    <style name="Styletext" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">#9E9E9E</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:fontFamily">@font/indie_flower</item>
    </style>

</resources>
